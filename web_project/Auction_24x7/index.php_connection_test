<?php
$servername = "mysql";
$username = "root";
$password = "chan";
$db = "detsdb";
$db2 = "ads_db";
// Create connection
$conn = new mysqli($servername, $username, $password,$db);

// Check connection
if ($conn->connect_error) {
  die("Connection failed 1: " . $conn->connect_error);
}
echo "Connected successfully 1";


$conn2 = new mysqli($servername, $username, $password,$db2);

// Check connection
if ($conn->connect_error) {
  die("Connection failed 2: " . $conn2->connect_error);
}
echo "Connected successfully 2";
?>